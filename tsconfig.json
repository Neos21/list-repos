{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "webpack-env"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict"                      : true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop"             : true,
    "experimentalDecorators"      : true,
    "importHelpers"               : true,
    "jsx"                         : "preserve",
    "resolveJsonModule"           : true,
    "sourceMap"                   : false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
